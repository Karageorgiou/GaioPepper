<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/image_user_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:src="@drawable/icons8_user_100"        />

    <!--app:tint="@color/white"-->

    <androidx.cardview.widget.CardView
        android:id="@+id/card_user_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/image_user_icon"
        app:cardBackgroundColor="@color/logo_yellow"
        app:cardCornerRadius="15dp">

        <TextView
            android:id="@+id/tv_user_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:text="message"
            android:textColor="@color/black"
            android:textSize="20sp" />


    </androidx.cardview.widget.CardView>

</RelativeLayout>